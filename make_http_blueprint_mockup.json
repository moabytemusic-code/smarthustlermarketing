{
    "scenario": {
        "title": "Smart Hustler Syndication (HTTP API Version)",
        "modules": [
            {
                "id": 1,
                "module": "rss:WatchRSS",
                "label": "Watch Smart Hustler Feed",
                "parameters": {
                    "url": "https://smarthustlermarketing.com/rss.xml",
                    "limit": 1
                }
            },
            {
                "id": 2,
                "module": "http:MakeRequest",
                "label": "Post to Medium (API)",
                "notes": "Get Token: Medium Settings > Integration Tokens\nGet UserID: GET https://api.medium.com/v1/me",
                "parameters": {
                    "url": "https://api.medium.com/v1/users/YOUR_USER_ID_HERE/posts",
                    "method": "POST",
                    "headers": [
                        {
                            "name": "Authorization",
                            "value": "Bearer YOUR_MEDIUM_TOKEN_HERE"
                        },
                        {
                            "name": "Content-Type",
                            "value": "application/json"
                        }
                    ],
                    "bodyType": "raw",
                    "contentType": "application/json",
                    "content": "{\n  \"title\": \"{{1.title}}\",\n  \"contentFormat\": \"html\",\n  \"content\": \"<h1>{{1.title}}</h1><br><p>{{1.description}}</p><br><p>Read the full article here: <a href='{{1.link}}'>{{1.title}}</a></p>\",\n  \"canonicalUrl\": \"{{1.link}}\",\n  \"tags\": [\"marketing\", \"business\", \"sidehustle\"],\n  \"publishStatus\": \"draft\"\n}"
                }
            },
            {
                "id": 3,
                "module": "http:MakeRequest",
                "label": "Post to Twitter/X (API v2)",
                "notes": "Requires Basic Tier ($100/mo) OR use a 3rd party proxy like rapidapi.com/alexanderisora/api/twitter-api45",
                "parameters": {
                    "url": "https://api.twitter.com/2/tweets",
                    "method": "POST",
                    "headers": [
                        {
                            "name": "Authorization",
                            "value": "OAuth YOUR_OAUTH_HEADER_STRING"
                        },
                        {
                            "name": "Content-Type",
                            "value": "application/json"
                        }
                    ],
                    "bodyType": "raw",
                    "contentType": "application/json",
                    "content": "{\n  \"text\": \"{{1.title}}\\n\\nRead here: {{1.link}}\\n\\n#SmartHustler #Marketing\"\n}"
                }
            }
        ]
    }
}